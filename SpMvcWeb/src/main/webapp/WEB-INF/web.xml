<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Archetype Created Web Application</display-name>
  
    <!-- this is defining that all request will go thru spring 
  dispatcher servlet which is shah-servlet.xml (defined below) 
  shah-servlet.xml will handle all requests -->
  <servlet>
		<servlet-name>shah</servlet-name>
		<servlet-class>
			org.springframework.web.servlet.DispatcherServlet
		</servlet-class>
	</servlet>
	
	<servlet-mapping>
		<servlet-name>shah</servlet-name>
		<url-pattern>/</url-pattern> <!-- all requests will go thru dispatcher servlet -->
	</servlet-mapping>
</web-app>
